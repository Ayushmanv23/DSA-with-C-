#include<bits/stdc++.h>
using namespace std;
int main()
{
    int r, c;
    cout<<"Enter the number of rows: ";
    cin>>r;
    cout<<"Enter the number of columns: ";
    cin>>c;
    int arr[r][c];
    cout<<endl;
    cout<<"Enter the elements in the array: ";
    for(int i=0;i<r;i++)
    {
        for(int j=0;j<c;j++)
        {
            cin>>arr[i][j];
        }
    }
    cout<<endl;
    cout<<"The array: "<<endl;
    for(int i=0;i<r;i++)
    {
        for(int j=0;j<c;j++)
        {
            cout<<arr[i][j]<<" ";
        }
        cout<<endl;
    }
    int sum = 0;
    for(int i=0;i<1;i++)
    {
        for(int j=0;j<3;j++)
        {
            sum += arr[i][j];   //Sum of first row
        }
    }
    cout<<endl;
    cout<<"The sum of first row is "<<sum;
    return 0;
}
