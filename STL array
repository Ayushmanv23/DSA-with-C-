#include<bits/stdc++.h>
using namespace std;
int main()
{
    array <int, 5> arr = {3, 5, 7, 2, 7};
    int size = arr.size();
    cout<<"The array size is "<<size;

    for(int i=0;i<size;i++)
    {
        cout<<arr[i]<<endl;
    }
    cout<<"Element at index: "<<arr.at(3)<<endl;
    bool truefalse = arr.empty();
    cout<<"True of false = "<<truefalse<<endl;
    bool empty = arr.empty();
    cout<<"Array is empty or not = "<<empty<<endl;
    cout<<"First element = "<<arr.front()<<endl;
    cout<<"Last element = "<<arr.back()<<endl;
    int count_7 = count(arr.begin(), arr.end(), 7);
    cout<<"This element is more than 1 time in array: ";
    for(int j=0;j<count_7;j++)
    {
        cout<<"7 ";
    }
}
