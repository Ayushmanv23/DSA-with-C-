#include <bits/stdc++.h>
using namespace std;

int main() 
{
    string str = "Hello, World!";
    string substr = "World";
    size_t found = str.find(substr);
    if(found != string::npos) 
    {
        cout<<"Substring found at index: "<<found<<endl;
    }
    else
    {
        cout<<"Substring not found"<<endl;
    }
    string str1 = "Welcome to the MIET";
    str1.replace(3,4,"abcd");
    cout<<str1<<endl;
    return 0;
}
