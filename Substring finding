#include <bits/stdc++.h>
using namespace std;

int main() 
{
    string str = "Hello World!";
    string substr = "World";
    size_t found = str.find(substr);  //size_t is a datatype which finds substring in string
    if(found != string::npos) //indicates a constant that means not found
    {
        cout<<"Substring found at index: "<<found<<endl;
    }
    else
    {
        cout<<"Substring not found!";   
    }
    return 0;
}
