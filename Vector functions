#include<bits/stdc++.h>
#include<vector>
using namespace std;
int main()
{
    vector<int> v;
    cout<<"The capacity of vector is "<<v.capacity()<<endl;
    v.push_back(10);
    cout<<"Capacity: "<<v.capacity()<<endl;
    v.push_back(12);
    cout<<"Capacity: "<<v.capacity()<<endl;
    v.push_back(14);
    cout<<"Capacity: "<<v.capacity()<<endl;
    v.push_back(20);
    cout<<"Capacity: "<<v.capacity()<<endl;
    v.push_back(24);
    cout<<"Capacity: "<<v.capacity()<<endl;
    cout<<"The first element is "<<v.front()<<endl;
    cout<<"The last element is "<<v.back()<<endl;
    cout<<endl;
    cout<<"Before POP: ";
    for(int i:v)
    {
        cout<<i<<" ";
    }
    cout<<endl;

    v.pop_back();
    cout<<"After POP : ";
    for(int i:v)
    {
        cout<<i<<" ";
    }
    cout<<endl;

    v.clear();
    cout<<endl;
    cout<<"After clear size is "<<v.size()<<endl;
    cout<<"After clear capacity is "<<v.capacity()<<endl;

}
